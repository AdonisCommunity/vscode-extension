{
    "edge: @layout('view')": {
        "prefix": "layout",
        "body": "@layout('${1:name}')",
        "description": "Edge: Layout view"
    },
    "edge: @extend('layout')": {
        "prefix": "extends",
        "body": "@extends('${1:name}')$2",
        "description": "Edge: Extends view layout"
    },
    "edge: @section('block') ... @endsection": {
        "prefix": "section-block",
        "body": [
            "@section('${1:name}')",
            "  $2",
            "@endsection"
        ],
        "description": "Edge: Section block"
    },
    "edge: @!section('block')": {
        "prefix": "section",
        "body": "@!section('${1:name}')",
        "description": "Edge: Section no default"
    }
}