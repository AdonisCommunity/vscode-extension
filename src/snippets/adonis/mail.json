{
    "Mail": {
        "body": [
            "${1:Mail}.${2|send,raw,connection|}($3)"
        ],
        "description": "Adonis Mail",
        "prefix": "mail"
    },
    "Mail send": {
        "body": [
            "await ${1:Mail}.send(${2:views = []}, ${3:data}, (${4:message}) => {",
            "  ${4:message}$0",
            "\\})$5"
        ],
        "description": "Adonis Mail",
        "prefix": "mail-send"
    },
    "Mail raw": {
        "body": [
            "await ${1:Mail}.raw(${2:views = []}, (${3:message}) => {",
            "  ${3:message}$0",
            "\\})$4"
        ],
        "description": "Adonis Mail",
        "prefix": "mail-send"
    },
    "Mail connection": {
        "body": [
            "await ${1:Mail}",
            "  .connection(${2:name})",
            "  .${3|send,raw|}($4)"
        ],
        "description": "Adonis Mail - connection",
        "prefix": "mail-connection"
    },
    "Mail message to": {
        "body": [
            "${1:message}.to(${2:email}, ${3:optionalName})"
        ],
        "description": "Adonis Mail - message to",
        "prefix": "mail-msg-to"
    },
    "Mail message from": {
        "body": [
            "${1:message}.from(${2:email}, ${3:optionalName})"
